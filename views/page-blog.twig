{% extends "base.twig" %}

{% block content %}

  <h1>{{page.title}}</h1>

  <p class="approach-p">
    {{page.content}}
  </p>
  <div class="container blog-container">
    {% for post in posts %}
      <a href="{{ post.permalink }}">
        <div class="preview" style="background: url('{{ post.thumbnail.src('large') }}') center; background-size: cover;"></div>
        <h2>
          {{ post.title }}
        </h2>
        <p>
          {{ post.content|excerpt(30) }}
        </p>
        <a class="read-more" href="{{ post.permalink }}">Read more</a>
      </a>
      {% if loop.last == false %}
        <hr>
      {% endif %}
      
    {% else %}
      <li>Sorry, no posts matched your criteria</li>
    {% endfor %}
  </div>


{% endblock %}